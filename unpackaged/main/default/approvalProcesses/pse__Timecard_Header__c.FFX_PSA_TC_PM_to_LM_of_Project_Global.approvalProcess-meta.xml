<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pse__Project__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__Resource__c</field>
        <field>pse__Start_Date__c</field>
        <field>pse__End_Date__c</field>
        <field>pse__Sunday_Hours__c</field>
        <field>pse__Sunday_Notes__c</field>
        <field>pse__Monday_Hours__c</field>
        <field>pse__Monday_Notes__c</field>
        <field>pse__Tuesday_Hours__c</field>
        <field>pse__Tuesday_Notes__c</field>
        <field>pse__Wednesday_Hours__c</field>
        <field>pse__Wednesday_Notes__c</field>
        <field>pse__Thursday_Hours__c</field>
        <field>pse__Thursday_Notes__c</field>
        <field>pse__Friday_Hours__c</field>
        <field>pse__Friday_Notes__c</field>
        <field>pse__Saturday_Hours__c</field>
        <field>pse__Saturday_Notes__c</field>
        <field>pse__Total_Hours__c</field>
        <field>pse__Total_Days_Worked__c</field>
        <field>pse__Bill_Rate__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Request to Manager</label>
        <name>Request_to_Manager</name>
    </approvalStep>
    <emailTemplate>FFX_PSA_Email_Templates/FFX_PSA_Timecard_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR(
(pse__Approver__r.Id = pse__Resource__r.pse__Salesforce_User__r.Id),
ISPICKVAL(pse__Project__r.pse__Project_Type__c, &quot;Internal - Functional&quot;),
				ISPICKVAL(pse__Project__r.pse__Project_Type__c, &quot;Internal - Admin and Ops	&quot;),
				ISPICKVAL(pse__Project__r.pse__Project_Type__c, &quot;Internal - Strategic	&quot;),
				ISPICKVAL(pse__Project__r.pse__Project_Type__c, &quot;Absence&quot;)
				
)
 &amp;&amp; pse__Submitted__c = True</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>FFX_PSA_Timecard_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_IFF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>FFX_PSA_Timecard_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_Timecard_Rejected_EmailAlert</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PSA Timecard PM to LM of Project/Global</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>FFX_PSA_Timecard_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_Status_Saved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Timecard_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
