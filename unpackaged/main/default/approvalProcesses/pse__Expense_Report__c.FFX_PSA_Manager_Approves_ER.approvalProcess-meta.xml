<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>pse__Project__c</field>
        <field>pse__Resource__c</field>
        <field>pse__Assignment__c</field>
        <field>pse__Total_Billable_Amount__c</field>
        <field>pse__Total_Non_Billable_Amount__c</field>
        <field>pse__Total_Reimbursement_Amount__c</field>
        <field>pse__First_Expense_Date__c</field>
        <field>pse__Last_Expense_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Manager Approvers ER</label>
        <name>Manager_Approvers_ER</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FFX_Finance_Expense_Approval</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Finance Approves ER</label>
        <name>Finance_Approves_ER</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>For Projects without a PM, or PM is submitting his/her own Expense Report // For Global/Internal Projects.</description>
    <emailTemplate>FFX_PSA_Email_Templates/FFX_PSA_Expense_Report_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(ISPICKVAL( pse__Status__c , &apos;Draft&apos;) || 
ISPICKVAL( pse__Status__c , &apos;Submitted&apos;) || 
ISPICKVAL( pse__Status__c , &apos;Rejected&apos;)) &amp;&amp; 
(( LEN ( pse__Approver__c) = 0 ) || ( pse__Approver__r.Id = pse__Resource__r.pse__Salesforce_User__r.Id ))  || 
ISPICKVAL(pse__Project__r.pse__Project_Type__c , &quot;Internal&quot;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>FFX_PSA_ER_Approved_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_IIF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>FFX_PSA_ER_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_IIF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Rejected_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Expense_Report_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>FFX_PSA_Disable_Auto_Submit_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_Set_ER_Submitted_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA Manager Approves ER</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>FFX_PSA_ER_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_IIF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FFX_PSA_ER_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
